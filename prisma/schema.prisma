datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String

  orders   Order[] // Um usuário pode ter vários pedidos
}

model Order {
  id          Int      @id @default(autoincrement())
  client_name  String  @map("client_name")
  estimation  DateTime @map("estimation_date") @db.Date
  date        DateTime @db.Date
  created_at  DateTime @default(now()) @map("created_at")
  updated_at  DateTime @updatedAt @map("updated_at")
  address     String
  cellphone   String
  city        String
  is_order     Boolean  @default(true) @map("is_order")
  items       Json

  cod_user      Int  @map("cod_user")
  user        User     @relation(fields: [cod_user], references: [id])
}
